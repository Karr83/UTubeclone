rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // =============================================================================
    // HELPER FUNCTIONS
    // =============================================================================

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Check file size (in bytes)
    function isUnder(maxSizeMB) {
      return request.resource.size < maxSizeMB * 1024 * 1024;
    }

    // Check allowed content types
    function isVideo() {
      return request.resource.contentType.matches('video/.*');
    }

    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // =============================================================================
    // CONTENT UPLOADS (videos, thumbnails)
    // Path: /content/{creatorId}/{contentId}/{filename}
    // =============================================================================

    match /content/{creatorId}/{contentId}/{filename} {
      // Anyone can read/download content (for playback)
      allow read: if true;

      // Only the creator can upload their own content
      allow create: if isOwner(creatorId) && isUnder(2048); // max 2GB

      // Only the creator can update/replace their own content
      allow update: if isOwner(creatorId) && isUnder(2048);

      // Only the creator can delete their own content
      allow delete: if isOwner(creatorId);
    }

    // =============================================================================
    // USER PROFILE PHOTOS
    // Path: /users/{userId}/avatar/{filename}
    // =============================================================================

    match /users/{userId}/{allPaths=**} {
      // Anyone can read profile photos
      allow read: if true;

      // Only the user can upload their own profile photo
      allow create, update: if isOwner(userId) && isImage() && isUnder(10); // max 10MB

      // Only the user can delete their own profile photo
      allow delete: if isOwner(userId);
    }

    // =============================================================================
    // STREAM THUMBNAILS
    // Path: /streams/{streamId}/{filename}
    // =============================================================================

    match /streams/{streamId}/{filename} {
      // Anyone can read stream thumbnails
      allow read: if true;

      // Authenticated users can upload stream thumbnails
      allow create, update: if isAuthenticated() && isImage() && isUnder(10);

      // Authenticated users can delete their stream thumbnails
      allow delete: if isAuthenticated();
    }
  }
}
